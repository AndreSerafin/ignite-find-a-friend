generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique()
  password  String
  latitude  Decimal
  longitude Decimal

  @@map("users")
}

enum Size {
  SMALL
  MEDIUM
  BIG
}

model Pet {
  id          String @id @default(uuid())
  name        String
  specie      String
  age         Int
  size        Size
  breed       String
  energyLevel Int
  environment String
  about       String

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  @@map("pets")
}
